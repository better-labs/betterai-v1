# ----------------------------------------------------------------------
# Environment Variables for BetterAI
#
# This file shows the structure for both .env and .env.local files.
# 
# .env - Contains production/shared configuration (database URLs, etc.)
# .env.local - Contains local development overrides and API keys
#
# IMPORTANT: Do not commit your .env or .env.local files to version control.
# ----------------------------------------------------------------------

# =============================================================================
# .env FILE - Production/Shared Configuration
# =============================================================================
# Copy these variables to your .env file


# AI Configuration - API Keys
# Get these from your AI service providers
OPENROUTER_API_KEY=sk-or-your-openrouter-api-key-here
# AI_GATEWAY_API_KEY=your-ai-gateway-api-key-here

# Cron Job Configuration
CRON_SECRET=your-secret-token-here
NEXT_PUBLIC_APP_URL=https://betterai.tools/

# Feature Flags Configuration
# Set to "1" or "true" to enable features in production
# Features are enabled by default in development
SHOW_MARKET_ALPHA=false
SHOW_PORTFOLIO=false
SHOW_SEARCH=false
SHOW_ACTIVITY=false
SHOW_TOS=false
SHOW_PRIVACY=false
SHOW_LOGIN_SIGNUP=true


# Batch Predictions Configuration
BATCH_PREDICTIONS_TOP_COUNT=10
# Extend prediction window
BATCH_PREDICTIONS_TARGET_DAYS=14   
# More comprehensive accuracy checking
PREDICTION_CHECK_LOOKBACK_DAYS=45
# More frequent data updates
BATCH_PREDICTIONS_END_RANGE_HOURS=48
BATCH_PREDICTIONS_MODEL=google/gemini-2.5-flash-lite

# Polymarket Daily Update Configuration
# Windowing strategy for event date filters
POLYMARKET_UPDATE_DAYS_PAST=8
POLYMARKET_UPDATE_DAYS_FUTURE=21
# Throttling and pagination
POLYMARKET_UPDATE_LIMIT=100
POLYMARKET_UPDATE_DELAY_MS=1000
POLYMARKET_UPDATE_MAX_RETRIES=3
POLYMARKET_UPDATE_RETRY_DELAY_MS=2000
POLYMARKET_UPDATE_TIMEOUT_MS=30000
POLYMARKET_UPDATE_USER_AGENT=BetterAI/1.0
POLYMARKET_UPDATE_MAX_BATCH_FAILURES=3


# Production Neon Database Configuration
# Obtain these from your Vercel Neon project dashboard
DATABASE_URL="postgres://username:password@host:port/database?sslmode=require"
DATABASE_URL_UNPOOLED="postgresql://username:password@host:port/database?sslmode=require"
# NOTE: migrate:deploy:base uses DATABASE_URL_UNPOOLED for migrations to avoid
# pooler/transaction-pooling limitations. Runtime should continue to use DATABASE_URL.

# Neon Database Connection Parameters
PGHOST=your-neon-host-pooler
PGHOST_UNPOOLED=your-neon-host
PGUSER=your-neon-username
PGDATABASE=your-neon-database-name
PGPASSWORD=your-neon-password

# Vercel Postgres Template Parameters
POSTGRES_URL="postgres://username:password@host:port/database?sslmode=require"
POSTGRES_URL_NON_POOLING="postgres://username:password@host:port/database?sslmode=require"
POSTGRES_USER=your-neon-username
POSTGRES_HOST=your-neon-host-pooler
POSTGRES_PASSWORD=your-neon-password
POSTGRES_DATABASE=your-neon-database-name
POSTGRES_URL_NO_SSL="postgres://username:password@host:port/database"
POSTGRES_PRISMA_URL="postgres://username:password@host:port/database?connect_timeout=15&sslmode=require"

# Prisma logging
# Set to "true" to enable verbose Prisma query logs in console; default is off
PRISMA_LOG_QUERIES=false


# =============================================================================
# Privy Authentication
# =============================================================================
# Create an app at https://dashboard.privy.io and copy the App ID below.
NEXT_PUBLIC_PRIVY_APP_ID=your-privy-app-id
# Optional: Set a custom client ID if needed for your Privy app
NEXT_PUBLIC_PRIVY_CLIENT_ID=your-privy-client-id
# Optional: restrict OAuth redirect origins in Privy dashboard to your domains.
# For Next.js App Router, Privy handles routes internally; no custom callback URL is required.

# Server-side Privy configuration (for API route authentication)
# Get these from your Privy dashboard under Configuration > App settings
PRIVY_APP_SECRET=your-privy-app-secret-here
PRIVY_VERIFICATION_KEY=your-privy-verification-key-here